{
    "name": "neos/flow-base-distribution",
    "description": "Flow Base Distribution",
    "license": "MIT",
    "support": {
        "email": "hello@neos.io",
        "slack": "http://slack.neos.io/",
        "forum": "https://discuss.neos.io/",
        "wiki": "https://discuss.neos.io/c/the-neos-project/project-documentation",
        "issues": "https://github.com/neos/flow-development-collection/issues",
        "docs": "https://flowframework.readthedocs.io/",
        "source": "https://github.com/neos/flow-base-distribution"
    },
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin",
        "allow-plugins": {
            "neos/composer-plugin": true
        }
    },
    "require": {
        "neos/flow": "9.0.0-beta4",
        "neos/welcome": "9.0.0-beta4",
        "neos/cache": "9.0.0-beta4",
        "neos/eel": "9.0.0-beta4",
        "neos/error-messages": "9.0.0-beta4",
        "neos/flow-log": "9.0.0-beta4",
        "neos/utility-arrays": "9.0.0-beta4",
        "neos/utility-files": "9.0.0-beta4",
        "neos/utility-mediatypes": "9.0.0-beta4",
        "neos/utility-objecthandling": "9.0.0-beta4",
        "neos/utility-opcodecache": "9.0.0-beta4",
        "neos/utility-pdo": "9.0.0-beta4",
        "neos/utility-schema": "9.0.0-beta4",
        "neos/utility-unicode": "9.0.0-beta4",
        "neos/http-factories": "9.0.0-beta4",
        "neos/fluid-adaptor": "9.0.0-beta4"
    },
    "require-dev": {
        "neos/kickstarter": "9.0.0-beta4",
        "neos/buildessentials": "9.0.0-beta4",
        "neos/behat": "9.0.0-beta4",
        "phpunit/phpunit": "~9.0",
        "mikey179/vfsstream": "~1.6"
    },
    "repositories": {
        "distributionPackages": {
            "type": "path",
            "url": "./DistributionPackages/*"
        }
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required",
        "neos/fluid-adaptor": "For rendering templates with TYPO3.Fluid"
    },
    "scripts": {
        "post-update-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
